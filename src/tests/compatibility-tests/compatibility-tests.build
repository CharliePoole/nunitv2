<?xml version="1.0"?>
<project name="CompatibilityTests" default="build" basedir=".">

  <target name="build">
    <csc target="library" 
      output="${current.test.dir}/compatibility-tests.dll" 
      debug="${build.debug}" define="${build.defines}">
      <sources>
        <include name="CompatibilityTests.cs"/>
        <include name="../../GeneratedAssemblyInfo.cs"/>
      </sources>
      <references>
        <include name="${current.framework.dir}/nunit.framework.dll"/>
        <include name="${current.lib.dir}/nunit.core.interfaces.dll"/>
      </references>
    </csc>
  </target>

  <target name="package">
    <copy todir="${package.src.dir}/tests/compatibility-tests">
      <fileset>
        <include name="CompatibilityTests.cs"/>
        <include name="compatibility-tests.csproj"/>
        <include name="compatibility-tests.build"/>
      </fileset>
    </copy>
  </target>

</project>